<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../main.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Заявки</title>
</head>
<body>
    <a class="btn btn-outline-secondary" href="/" style="margin-left: 50px;">На головну</a>
    <h1 class="text-center">Список заявок</h1>
    <div class="table-responsive">
        <table class="table table-primary table-hover table-sm">
            <tr>
                <th>Код заявки</th>
                <th>Код клієнта</th>
                <th>Дата подачи</th>
                <th>Статус</th>
            </tr>
            <% for (var i = 0; i < Application.length; i++) { %>

            <tr>
                <td><%= Application[i].ID_app %></td>
                <td><%= Application[i].ID_client %></td>
                <td><%= Application[i].DateOrder %></td>
                <td><%= Application[i].Status %></td>

                <td style="background-color: white;">
                    <a class="btn btn-danger" href="/api/application/delete/<%= Application[i].ID_app %>">Видалити</a>
                </td>
                <td style="background-color: white;">
                    <a class="btn btn-info" href="/api/application/<%= Application[i].ID_app %>">Редагувати</a>
                </td>
            </tr>
            <% } %>
        </table>
    </div>

    <h2 class="text-center">Додати заявку</h2>
    <form action="application" method="POST" class="text-center">
        <div class="mb-3">
            <label>
                Код клієнта
                <input type="number" class="form-control" placeholder="Код клієнта" id="ID_client" name="ID_client">
            </label>
            <label>
                Дата подачи
                <input type="date" class="form-control" placeholder="Дата" id="DateOrder" name="DateOrder">
            </label>
            <label>
                Статус
                <input type="text" class="form-control" placeholder="Статус" id="Status" name="Status">
            </label>

        </div>
        <button type="submit" class="btn btn-primary">Додати</button>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-MrcW6ZMFYlz...twltaxVXM" crossorigin="anonymous"></script>
</body>
</html>